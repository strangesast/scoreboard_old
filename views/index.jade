extends layout

block links
  link(rel="import", href="/components/core-toolbar/core-toolbar.html")
  link(rel="import", href="/components/core-header-panel/core-header-panel.html")
  link(rel="import", href="/components/paper-icon-button/paper-icon-button.html")
  link(rel="import", href="/components/paper-button/paper-button.html")
  link(rel="import", href="/components/paper-shadow/paper-shadow.html")
  link(rel="import", href="/components/core-icon/core-icon.html")

  link(rel="stylesheet", href="/stylesheets/style.css")
  link(rel="stylesheet", href="/stylesheets/index.css")

block content
  core-header-panel(flex mode="waterfall")
    core-toolbar(horizontal center-justified layout)
      .header-content(fullbleed horizontal layout)
        a(href="/" flex) 
          core-icon(src="/images/icon_dark_m.png").big
          span sportsync
        .page-highlights(horizontal layout)
          a(href="/#features") features
          a(href="/#login") log in
    .content
      .introduction
        .summary 
          img(src="/images/icon_v2.svg" height=74)
          div
            h1 sportsync
            h3 collect and track athletic data
      paper-shadow.card.section(z=0 animated)#features
        h2 Features
        h3 Feature 1
        p this is a great feature
        h3 Feature 2
        p this is another great feature
      paper-shadow.card.section(z=0 animated)#current-games
        h2 Events
        h3 Current
        a(href="/current-game") 
          paper-button(raised) Local Event
        p
          i No global public events

        h3 Previous
        p
          i No public events

        h3 Upcoming
        p
          i No public events
      paper-shadow.card.section(z=0 animated)#demo
        h2 Demo
        h3 View an example event
        a(href="/demo")
          paper-button(raised).hover Demo


block scripts
  script(src="/javascripts/index.js")

extends layout

block links
  link(rel="import", href="/components/core-toolbar/core-toolbar.html")
  link(rel="import", href="/components/core-header-panel/core-header-panel.html")
  link(rel="import", href="/components/paper-icon-button/paper-icon-button.html")
  link(rel="import", href="/components/paper-button/paper-button.html")
  link(rel="import", href="/components/paper-shadow/paper-shadow.html")
  link(rel="import", href="/components/core-icon/core-icon.html")

  link(rel="stylesheet", href="/stylesheets/style.css")
  link(rel="stylesheet", href="/stylesheets/index.css")

block content
  canvas#canvas(style="position:absolute; left:0px; top:80px;")
  core-header-panel(flex mode="waterfall")
    core-toolbar(horizontal center-justified layout)
      .header-content(fullbleed horizontal layout)
        a(href="/" flex) 
          core-icon(src="/images/icon_dark_m.png").big
          span sportsync
        .page-highlights(horizontal layout)
          a(href="/#features") features
          a(href="/#login") log in
    .content
      paper-shadow.card.section(z=0 animated)#current-games
        h2 Events
        h3 Current
        a(href="/current-game") 
          paper-button(raised) Local Event


block scripts

  script(src="/javascripts/fonts.js")
  script(src="/javascripts/index.js")
